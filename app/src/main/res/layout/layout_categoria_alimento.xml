<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_alimentos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/melancia"
        android:contentDescription="@string/imagem_da_categoria_ovelha" />

    <com.book.app.util.CustomTextView
        android:id="@+id/txt_alimentos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alimentos"
        android:textSize="40sp"/>

</LinearLayout>